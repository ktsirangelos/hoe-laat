<div
  class="flex flex-col items-center justify-center p-4"
>
  <div class="w-full max-w-sm mx-auto">
    <div class="mb-10">
      <h2 class="text-center text-3xl text-gray-900">
        hoe laat
      </h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 w-full" }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class:
                          "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-200 focus:border-sky-400 text-sm",
                        placeholder: "you@example.com" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
                           autocomplete: "current-password",
                           class:
                             "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-200 focus:border-sky-400 text-sm",
                           placeholder: "Enter your password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me,
                        class:
                          "h-4 w-4 text-sky-500 focus:ring-sky-400 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>
      </div>

      <div>
        <%= f.submit "Sign in",
                 class:
                   "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-400" %>
      </div>
    <% end %>

    <div class="mt-6 flex items-center justify-between text-sm">
      <%= link_to "Forgot your password?",
      new_password_path(resource_name),
      class: "text-sky-600 hover:text-sky-500 font-medium" %>
      <%= link_to "Sign up",
      new_registration_path(resource_name),
      class: "text-sky-600 hover:text-sky-500 font-medium" %>
    </div>
  </div>
</div>
